<div class="passwordBox animated fadeInDown">
    <div class="row">

        <div class="col-md-12">
            <div class="ibox-content">

                <h2 class="font-bold">Forgot password</h2>

                <p>
                    Enter your email address and your password will be reset and emailed to you.
                </p>

                <div class="row">

                    <div class="col-lg-12">
                        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post, class: 'm-t'}) do |f| %>
                            <div class="form-group">
                                <%= f.email_field :email, class: 'form-control', placeholder: 'Email address' %>
                            </div>

                            <%= f.submit 'Send new password', class: 'btn btn-login block full-width m-b' %>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%= link_to 'Back to Log In', new_session_path(resource_name), class: "btn btn-info block full-width m-b", style: "margin-top: 10px" %>
</div>


<div class="passwordBox animated fadeInDown">
    <div class="row">

        <div class="col-md-12">
            <div class="ibox-content">

                <h2 class="font-bold">Change your password</h2>

                <div class="row">

                    <div class="col-lg-12">
                        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
                            <%= f.hidden_field :reset_password_token %>
                            <div class="form-group">
                                <%= f.password_field :password, class: 'form-control', placeholder: 'New password', autofocus: true, autocomplete: 'off' %>
                            </div>
                            <div class="form-group">
                                <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirm new password', autocomplete: 'off' %>
                            </div>

                            <%= f.submit 'Change my password', class: 'btn btn-bonial block full-width m-b' %>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="passwordBox animated fadeInDown">
    <div class="row">

        <div class="col-md-12">
            <div class="ibox-content">

                <h2 class="font-bold">Set your password</h2>

                <div class="row">

                    <div class="col-lg-12">
                        <%= form_for(resource, as: resource_name, url: invitation_path(resource_name),
                                     html: { method: :put }) do |f| %>
                            <%= f.hidden_field :invitation_token %>
                            <% if f.object.class.require_password_on_accepting %>
                            <div class="form-group">
                                <%= f.password_field :password, class: 'form-control', placeholder: 'New password',
                                                     autofocus: true, autocomplete: 'off' %>
                            </div>
                            <div class="form-group">
                                <%= f.password_field :password_confirmation, class: 'form-control',
                                                     placeholder: 'Confirm new password', autocomplete: 'off' %>
                            </div>
                            <% end %>
                            <%= f.submit 'Set my password', class: 'btn btn-login block full-width m-b' %>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

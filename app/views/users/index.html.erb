<div class="row" style="margin-top: 20px">
    <div class="col-lg-12">
        <div class="ibox float-e-margins main-box">
            <div class="ibox-title">
                <h5>Users</h5>
                <div class="ibox-tools">
                    <%= link_to({ controller: 'users', action: 'new' }, { class: 'btn btn-sm btn-primary',
                                                                          style: 'color: white'}, {}) do %>
                        <i class="fa fa-plus" style="margin-right: 5px"></i><span style="">New User</span>
                    <% end %>
                </div>
            </div>
            <div class="ibox-content">
                <div class="table-responsive">
                    <%= form_tag users_path, method: 'get', id: 'search-field' do %>
                        <div class="col-sm-4" style="padding-left: 0;">
                            <%= text_field_tag :search, params[:search],
                                               class: 'form-control input-sm pull-left search-field',
                                               placeholder: 'Search for users' %>
                        </div>
                        <div id="data-table">
                            <%= render 'users' %>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Invite New User</h5>
            </div>
            <div class="ibox-content">
                <%= form_for(@user, html: {class: 'form-horizontal'}) do |f| %>
                    <div class="form-group">
                        <%= f.label :email, 'Email Address', class: 'col-sm-2 control-label' %>
                        <div class="col-sm-10">
                            <%= f.email_field :email, class: 'form-control' %>
                        </div>
                    </div>
                    <div class="form-group">
                        <%= f.label :admin, 'Admin User', class:'col-sm-2 control-label' %>
                        <div class="col-sm-10">
                            <%= f.check_box :admin, class: 'checkbox-info', style: 'margin-top: 10px'%>
                        </div>
                    </div>
                    </div>
                    </div>
                    <%= f.submit 'Invite user', class: 'btn btn-primary pull-right', style: 'margin-bottom: 20px' %>
                    <%= link_to 'Cancel', :back, class: 'btn btn-white pull-right', style: 'margin-right: 10px' %>
                <% end %>
                </div>
</div>
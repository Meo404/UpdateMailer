<tr>
    <td><%= user.id %></td>
    <td><%= user.email %></td>
    <td><%= user.admin %></td>
    <td>
        <%= link_to({controller: 'users', action: 'edit', id: user.id}, {class: 'btn btn-xs btn-primary'}, {}) do %>
            <i class="fa fa-edit"></i>
        <% end %>
        <%= link_to({controller: 'users', action: 'destroy', id: user.id},
                    {class: 'btn btn-xs btn-danger', method: :delete, data:
                            {confirm: "Are you sure you want to delete user: #{user.email}?"}}, {method: :delete}) do %>
            <i class="fa fa-trash"></i>
        <% end %>
    </td>
</tr>

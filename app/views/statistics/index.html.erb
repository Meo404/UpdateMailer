<div class="wrapper animated fadeIn top-row">
    <div class="row">
        <div class="col-lg-8">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    <div>
                        <h3 class="font-bold no-margins">
                            Mail Views
                        </h3>
                        <small>Last 14 days</small>
                    </div>
                    <div class="m-t-sm">
                        <div class="row">
                            <div class="col-md-12">
                                <div>
                                    <canvas id="viewChart" height="235"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <span class="label label-primary pull-right">Last month</span>
                    <h5>Mail Stats</h5>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-md-6">
                            <small class="stats-label">Mails sent</small>
                            <h1><%= @data[:last_month_mails] %></h1>
                        </div>
                        <div class="col-md-6">
                            <small class="stats-label">Views</small>
                            <h1><%= @data[:last_month_views] %></h1>
                        </div>
                    </div>
                </div>
            </div>
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <span class="label label-info pull-right">All Time</span>
                    <h5>Mail Stats</h5>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-md-6">
                            <small class="stats-label">Mails sent</small>
                            <h1><%= @data[:all_time_mails] %></h1>
                        </div>
                        <div class="col-md-6">
                            <small class="stats-label">Views</small>
                            <h1><%= @data[:all_time_views] %></h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins main-box">
                <div class="ibox-title">
                    <h5>Latest Sent Update Mails</h5>
                </div>
                <div class="ibox-content">
                    <div class="row" style="">
                        <%= form_tag statistics_path, method: 'get', id: 'search-field' do %>
                            <div class="col-sm-8 m-b-xs">
                                <div data-toggle="buttons" class="btn-group">
                                    <div data-toggle="buttons" class="btn-group" id="self-switch">
                                        <label class="btn btn-sm btn-white active">
                                            <input name="scope" value="false" type="radio" class="own-mails-switch">All
                                            Mails
                                        </label>
                                        <label class="btn btn-sm btn-white">
                                            <input name="scope" value="true" type="radio" class="own-mails-switch">My Mails
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="input-group">
                                    <%= text_field_tag :search, params[:search],
                                                       class: 'form-control input-sm',
                                                       placeholder: 'Search for update mails' %>
                                    <span class="input-group-btn">
                                        <button type="button" class="btn btn-sm btn-primary">
                                            <i class="fa fa-search"></i>
                                        </button>
                                        <%= link_to({:controller => 'update_mails', action: 'new'},
                                                    {:class => 'btn btn-sm btn-primary',
                                                     :style => 'margin-left: 5px;'}, {}) do %>
                                        <i class="fa fa-plus-square"></i>&nbsp;New Mail
                                <% end %>
                                </span>
                                </div>
                            </div>
                        <% end %>
                    </div>
                    <div class="table-responsive">
                        <div id="data-table">
                            <%= render partial: 'latest_update_mails',
                                       locals: { latest_update_mails: @latest_update_mails } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row" style="margin-top: 20px">
    <div class="col-lg-12">
        <div class="ibox float-e-margins main-box">
            <div class="ibox-title">
                <h5>Email Templates</h5>
            </div>
            <div class="ibox-content">
                <div class="table-responsive">
                    <%= form_tag email_templates_path, method: 'get', id: 'search-field' do %>
                        <div class="col-sm-4" style="padding-left: 0;padding-bottom: 5px">
                            <%= text_field_tag :search, params[:search],
                                               class: 'form-control input-sm pull-left',
                                               placeholder: 'Search for templates' %>
                        </div>
                    <% end %>
                    <%= link_to({:controller => 'email_templates', :action => 'new'},
                                {:class => 'btn btn-sm btn-primary pull-right', :style => 'color: white'}, {}) do %>
                        <i class="fa fa-plus" style="margin-right: 5px"></i><span style="">New Template</span>
                    <% end %>
                    <div id="data-table">
                        <%= render 'email_templates' %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
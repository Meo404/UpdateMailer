<!-- Modal Window for choosing template -->

<div class="modal inmodal" id="templateModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content animated bounceInDown">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">Ã—</span><span class="sr-only">Close</span></button>
                <i class="fa fa-file-text-o modal-icon"></i>
                <h4 class="modal-title">Select Template</h4>
                <small class="font-bold">Please select a template to be used for the Email!</small>
            </div>
            <div class="modal-body">
                <select class="form-control m-b" name="template" id="template-select" onChange="templateSwitch()">
                    <option selected disabled>Choose Template</option>
                    <% EmailTemplate.select('id, preview_image_id, name').order(name: :desc).each do |template| %>
                        <option value="<%= template.preview_image_id %>"
                                id="<%= template.id %>"><%= template.name %></option>
                    <% end %>
                    <option value="custom" id="custom">Custom Template</option>
                </select>
                <img id="preview-image" style="display: none; width: 100%" src=''>
                <div class="form-group" id="custom-template" style="display: none">
                    <label for="comment">Paste HTML code:</label>
                    <textarea class="form-control" rows="5" id="custom-html"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-white" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal"
                        onClick="selectTemplate()">Select</button>
            </div>
        </div>
    </div>
</div>
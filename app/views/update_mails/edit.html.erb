<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Edit Update Mail</h5>
            </div>
            <div class="ibox-content">
                <%= form_for(@update_mail, remote: true, html: { class: 'form-horizontal' }) do |f| %>
                    <div class="form-group">
                        <%= f.label :title, 'Title', class: 'col-sm-2 control-label' %>
                        <div class="col-sm-10">
                            <%= f.text_field :title, class: 'form-control' %>
                        </div>
                    </div>
                    <div class="form-group">
                        <%= f.label :distribution_list_ids, 'Recipients', class: 'col-sm-2 control-label' %>
                        <div class="col-sm-10">
                            <%= f.collection_select :distribution_list_ids, DistributionList.all, :id, :name, {},
                                                    { multiple: true, class: 'form-control',
                                                      id: 'select-distribution-lists', placeholder: 'Select ...'} %>
                        </div>
                    </div>
                    <%= f.hidden_field :body, id: 'update-mail-body' %>
                    </div>
                    </div>
                    <%= f.submit 'Save Update Mail', class: 'btn btn-primary pull-right', id: 'submit-button',
                                 style: 'margin-bottom: 20px' %>
                    <%= link_to 'Cancel', :back, class: 'btn btn-white pull-right', style: 'margin-right: 10px' %>
                <% end %>
                <%= render 'templates' %>
                </div>
</div>

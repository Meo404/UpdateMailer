<div class="row  border-bottom white-bg dashboard-header">
    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <h5>New Distribution List</h5>
        </div>
        <div class="ibox-content">
            <%= form_for @distribution_list, html: {class: 'form-horizontal'} do |f| %>
                <div class="form-group">
                    <%= f.label :name, 'Name', class: 'col-sm-2 control-label' %>
                    <div class="col-sm-10">
                        <%= f.text_field :name, class: 'form-control' %>
                    </div>
                </div>
                <div class="form-group">
                    <%= f.label :email_ids, 'Email Adresses', class: 'col-sm-2 control-label' %>
                    <div class="col-sm-10">
                        <%= f.collection_select :email_ids, Email.all, :id, :address, {},
                                                { multiple: true, class: 'form-control',
                                                  id: 'select-emails', placeholder: 'Select ...'} %>
                    </div>
                </div>
        </div>
    </div>
         <%= f.submit 'Create Distribution List', class: 'btn btn-primary pull-right', style: 'margin-bottom: 20px' %>
         <%= link_to 'Cancel', :back, class: 'btn btn-white pull-right', style: 'margin-right: 10px' %>
         <% end %>
</div>
